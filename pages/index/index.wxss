/**index.wxss**/
@import "../../static/wxss/weui.wxss";
@import "../info/info.wxss";

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.next-bus {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.name-route {
  display: flex;
  flex-direction: column;
  margin-left: 5px;
}

.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 128rpx;  
  height: 128rpx;  
  margin: 20rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}  

.userinfo-nickname {
  font-weight: 600;
  font-size: 20px;
}

.route{
  font-size: 16px;
}

.button-view{
  display: flex;
  align-items: center;
  margin-right: 3%;
}

.picker{
    padding: 13px;
    background-color: #FFFFFF;
}

.table{
  border:1px solid #fb9a99;
  border-radius: 7px;
  width:93%;
  align-content: center;
  vertical-align: center;
  margin-left: 3%;
  margin-bottom: 10px;
}

.avatar-bg{
  background-color: #b3e2cd;
}

.avatar{
  display: flex;
  width:93%;
  justify-content: space-between;
  margin-left: 3%;
}

.tr{
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.th{
  font-weight: 600;
  background: #FFFFFF;
  font-size: 17px;
}

.td{
  font-weight: 600;
  color: red;
  background: #F5F5F5;
}

.td1{
  background: #FFFFFF;
}

.td2{
  background: #F5F5F5;
}

.td-button{
  width: 100%;
  text-align: center;
}

.td, .td1, .td2{
  font-size: 15px;
}

.th, .td, .td1, .td2{
  padding: 10px;
  width: 100%;
  text-align: center;
}